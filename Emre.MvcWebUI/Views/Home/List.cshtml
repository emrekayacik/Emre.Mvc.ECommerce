@model List<Emre.MvcWebUI.Models.ProductModel>
@{
    ViewBag.Title = "List";
}

<div class="container pt-3 pb-5">
    <div class="row">
        <div class="col-md-3">
            @Html.Action("GetCategories", "Home")
        </div>

        <div class="col-md-9">
            @if (Model.Count() == 0)
            {
                <div class="alert alert-warning" role="alert">
                    <i class="fa fa-exclamation-circle"></i>
                    <strong> Bu kategoride bir ürün bulunamadı.</strong>
                </div>
            }
            else
            {
                <div class="alert alert-success" role="alert">
                    <i class="fa fa-check-square"></i>
                    <strong>@Model.Count </strong>adet ürün listelendi.
                </div>

            }
            @Html.Partial("_ProductList", Model)
        </div>
    </div>
</div>